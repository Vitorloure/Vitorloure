 l = str(input("Me digite uma letra, meu bom: "))

if l == "a" or "A":
  print("Essa letra é uma vogal!")
else:
  print("Essa letra é uma consoante")
  
if l == "e" or "E":
  print("Essa letra é uma vogal!")

else:
  print("Essa letra é uma consoante")
  
if l == "i" or "I":
  print("Essa letra é uma vogal!")

else:
  print("Essa letra é uma consoante")

if l == "o" or "O":
  print("Essa letra é uma vogal!")

else:
  print("Essa letra é uma consoante")

if l == "u" or "U":
  print("Essa letra é uma vogal!")

else:
  print("Essa letra é uma consoante")
